<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for AR -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Storage permission for saving screenshots -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Network permissions required for ARCore Cloud Anchors and related services -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Camera hardware requirement -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- ARCore requirement - THIS IS CRITICAL -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrueScale"
        tools:targetApi="31">

        <!-- ARCore metadata - REQUIRED FOR ARCORE TO WORK -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity
            android:name="com.example.truescale.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TrueScale">
            <!--
                REMOVED: android:screenOrientation="portrait"
                This allows ARCore to correctly handle device rotation.
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
